# MuDiKo KI Assistant - Environment Variables (Production Template)

# Flask application secret key (REQUIRED in production)
# Generate a strong random value, e.g. with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REPLACE_WITH_A_STRONG_SECRET_KEY

# Allowed Frontend origins (comma-separated). Use your HTTPS domain.
CORS_ORIGINS=https://music.ifib.eu

# Session cleanup and limits
SESSION_TTL_SECONDS=3600          # 1 hour inactivity TTL
GC_INTERVAL_SECONDS=900           # Background GC every 15 minutes
MAX_CONTENT_LENGTH=104857600      # 100 MB upload limit

# Optional: add other environment variables here as needed# MuDiKo KI Assistant - Environment Configuration

# OpenAI Configuration (Optional - f√ºr KI-Feedback)
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Upload Configuration
MAX_UPLOAD_SIZE=50MB
UPLOAD_FOLDER=uploads

# Audio Processing
AUDIO_QUALITY=high
PROCESSING_TIMEOUT=300

# Security
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log